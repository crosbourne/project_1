<h1>GENRES</h1>

<nav>
  <div class="row">
    <div class="large-12 columns">
      <ul class="large-block-grid-3">
        
        <% @genres.each do |genre| %>
        <li class="block-grid-item"> 
          <div class="content">

            
           <%= link_to genre.name, genre%>

         </div>

         <%= link_to image_tag(genre.genre_image.url), genre %>
         
         <%= link_to 'Edit', edit_genre_path(genre) if can? :edit, genre %>
         <%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } if can?(:destroy, genre) %>
       </li>
       <% end %>
       
     </ul>
   </div>
 </div>  

</nav>



